use strict;
use warnings;
use Exception::Class::TryCatch;

package Conf;

sub setup {
    my $conf = shift;

    my %db_keys = (
	'DBNAME'				=> {
	    DEFAULT => 'debbuild'
	},
	'DBUSER'				=> {
	    DEFAULT => 'rleigh'
	},
	'DBPASSWORD'				=> {
	    DEFAULT => ''
	},
	'GPG_KEYRING'				=> {
	    DEFAULT => ''
	},
	'ARCHIVE_CACHE'				=> {
	    DEFAULT => '/var/lib/sbuild/archive-cache'
	}
    );

    $conf->set_allowed_keys(\%db_keys);
}

package Options;

use Sbuild::OptionsBase;
use Sbuild::Conf qw();

BEGIN {
    use Exporter ();
    our (@ISA, @EXPORT);

    @ISA = qw(Exporter Sbuild::OptionsBase);

    @EXPORT = qw();
}

sub set_options {
    my $self = shift;

    $self->add_options(
	"db-name=s" => sub {
	    $self->set_conf('DBNAME', $_[1]);
	},
	"db-user=s" => sub {
	    $self->set_conf('DBUSER', $_[1]);
	},
	"db-password=s" => sub {
	    $self->set_conf('DBPASSWORD', $_[1]);
	},
	"gpg-keyring=s" => sub {
	    $self->set_conf('GPG_KEYRING', $_[1]);
	});
}

package main;

use Getopt::Long;
use Switch;

use Sbuild qw(help_text version_text usage_error);
use Sbuild::DB;

try eval {
    my $conf = Sbuild::Conf::new();
    Conf::setup($conf);
    exit 1 if !defined($conf);
    my $options = Options->new($conf, "sbuild-db", "1");
    exit 1 if !defined($options);
    my $db = Sbuild::DB->new($conf);
    exit 1 if !defined($db);

    if (@ARGV < 1) {
	usage_error("sbuild-db", "Incorrect number of options")
    }



    my $command = shift(@ARGV);

    switch ($command) {
	case "key" { do_key($db, @ARGV); }
	case "suite" { do_suite($db, @ARGV); }
	else { print STDERR "sbuild-db: '$command' is not an sbuild-db command\n";
	       exit 1; }
    }
};

if (catch my $err) {
    print STDERR "E: $err\n";
    print STDERR "I: " . $err->info . "\n"
	if ($err->info);
    print STDERR "Usage: sbuild-db " . $err->usage . "\n"
	if ($err->usage);
    exit(1);
}
exit 0;

sub do_key {
    my $db = shift;
    my @opts = @_;

    my $operation = shift(@opts);
    my @keys = @opts;

    switch ($operation) {
	case "add" { $db->key_add(@opts); }
	case "update" { $db->key_update(@opts); }
	case "remove" { $db->key_remove(@opts); }
	case "list" { $db->key_list(@opts); }
	case "show" { $db->key_show(@opts); }
	case "verify" { $db->key_verify_file(@opts); }
	else { $db->key_list(); }
    }
}

sub do_suite {
    my $db = shift;
    my @opts = @_;

    my $operation = shift(@opts);
    my @suites = @opts;

    switch ($operation) {
	case "add" { $db->suite_add(@opts); }
	case "update" { $db->suite_update(@opts); }
	case "remove" { $db->suite_remove(@opts); }
	case "list" { $db->suite_list(@opts); }
	case "show" { $db->suite_show(@opts); }
	else { $db->suite_list(); }
    }
}
